{
  "manifest_version": 3,
  "name": "Timely",
  "description": "Track the time for your favourite procrastination methods",
  "version": "1.0.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Timely",
    "default_icon": "icon.png"
  },
  "permissions": ["tabs", "storage"],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
